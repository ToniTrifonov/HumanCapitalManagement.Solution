@using HumanCapitalManagement.Web.ViewHelpers
@model HumanCapitalManagement.Web.Models.Accounts.CreateAccountInputModel

@{
    var messageClass = "";

    if (ViewBag.Succeed != null)
    {
        messageClass = ViewBag.Succeed ? "text-info" : "text-danger";
    }
}

<h1 class="fw-semibold mb-3 text-center mt-5">Create Account</h1>
<form class="w-50 m-auto mt-5" asp-controller="Accounts" asp-action="Create" method="post" >
    @if (ViewBag.Message != null)
    {
        <div class="row mb-3">
            <span class="@messageClass mb-3 fw-semibold">@ViewBag.Message</span>
        </div>
    }
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Email" type="email" class="form-control" />
        </div>
        <span asp-validation-for="@Model.Email" class="text-danger fw-semibold"></span>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Password" type="password" class="form-control" />
        </div>
        <span asp-validation-for="@Model.Password" class="text-danger fw-semibold"></span>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Confirm Password</label>
        <div class="col-sm-10">
            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" />
        </div>
        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger fw-semibold"></span>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Role</label>
        <div class="col-sm-10">
            <select asp-items="@ViewDataHelper.AllRoles" asp-for="@Model.Role" class="form-control"></select>
        </div>
        <span asp-validation-for="@Model.Role" class="text-danger fw-semibold"></span>
    </div>
    <button type="submit" class="btn btn-dark fw-semibold float-end">Create</button>
</form>
