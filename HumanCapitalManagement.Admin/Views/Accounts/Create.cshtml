@model HumanCapitalManagement.Web.Models.Accounts.CreateAccountModel

<form asp-controller="Accounts" asp-action="Create" method="post" >
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Email" type="email" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Password" type="password" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Confirm Password</label>
        <div class="col-sm-10">
            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Role</label>
        <div class="col-sm-10">
            <select asp-items="ViewBag.Roles" asp-for="@Model.RoleId" class="form-control" id="inputRoles"></select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
