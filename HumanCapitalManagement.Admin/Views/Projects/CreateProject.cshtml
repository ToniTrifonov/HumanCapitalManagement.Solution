@using HumanCapitalManagement.Web.ViewHelpers
@model HumanCapitalManagement.Web.Models.Projects.CreateProjectInputModel

<h1 class="fw-semibold mb-3 text-center mt-5">Create Project</h1>
<form class="mt-5 w-50 m-auto" asp-controller="Projects" asp-action="Create" method="post">
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="row mb-3">
            <span class="fw-semibold">@ViewBag.ErrorMessage</span>
        </div>
    }
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" type="text" class="form-control" />
        </div>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.Description" class="form-control"></textarea>
        </div>
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Size</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Size" type="number" class="form-control" />
        </div>
        <span asp-validation-for="@Model.Size" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-dark mt-3 float-end fw-semibold">Create</button>
</form>