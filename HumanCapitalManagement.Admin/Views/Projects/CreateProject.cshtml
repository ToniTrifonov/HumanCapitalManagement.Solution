@using HumanCapitalManagement.Web.ViewHelpers
@model HumanCapitalManagement.Web.Models.Projects.CreateProjectInputModel

<form asp-controller="Projects" asp-action="Create" method="post">
    @if (ViewBag.Message != null)
    {
        <div class="row mb-3">
            <span class="text-info">@ViewBag.Message</span>
        </div>
    }
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" type="text" class="form-control" />
        </div>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <textarea asp-for="@Model.Description" class="form-control"></textarea>
        </div>
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Size</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Size" type="number" class="form-control" />
        </div>
        <span asp-validation-for="@Model.Size" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>