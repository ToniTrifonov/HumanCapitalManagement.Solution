@using HumanCapitalManagement.Web.ViewHelpers
@model HumanCapitalManagement.Web.Models.Employees.EditEmployeeModel

<form>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Employee.FirstName" id="employee-first-name" type="text" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Employee.LastName" id="employee-last-name" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Position</label>
        <div class="col-sm-10">
            <select asp-for="@Model.Employee.Position" asp-items="ViewDataHelper.AllEmployeePositions()" id="employee-position" class="form-control"></select>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Salary</label>
        <div class="col-sm-10">
            <input asp-for="@Model.Employee.Salary" min="0" type="number" id="employee-salary" class="form-control" />
        </div>
    </div>
    <button type="submit" id="edit-employee-btn" class="btn btn-primary">Edit</button>
</form>